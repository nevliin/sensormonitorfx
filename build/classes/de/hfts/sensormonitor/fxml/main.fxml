<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.hfts.sensormonitor.chart.SensorChart?>
<?import org.controlsfx.control.CheckComboBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hfts.sensormonitor.controller.MainController">
    <top>
        <MenuBar>
            <Menu text="%file">
                <MenuItem text="%quit" onAction="#manageMenuItemQuit"></MenuItem>
                <MenuItem text="%reboot" onAction="#manageMenuItemReboot"></MenuItem>  
            </Menu> 
            <Menu text="%recordings">
                <MenuItem text="%show_all" onAction="#manageMenuItemShowAll"></MenuItem>
                <MenuItem text="%delete_all" onAction="#manageMenuItemDeleteAll"></MenuItem>  
            </Menu> 
            <Menu text="%help">
                <MenuItem text="%settings" onAction="#manageMenuItemSettings"></MenuItem>  
            </Menu> 
        </MenuBar>
    </top>
    <center>
        <TabPane>
            <Tab>
                <GridPane>
                    <children>
                        <CheckComboBox 
                            GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="labelInfo"
                            GridPane.columnIndex="1" GridPane.rowIndex="1" />  
                        <Separator 
                            GridPane.columnIndex="0" GridPane.rowIndex="1"
                            GridPane.columnSpan="3" />                        
                    </children>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>                        
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                        <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                        <RowConstraints vgrow="ALWAYS" minHeight="25.0"/>
                        <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                    </rowConstraints>
                </GridPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
