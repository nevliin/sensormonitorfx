<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hfts.sensormonitor.controller.MainController">
    <top>
        <fx:include fx:id="menubar" source="menubar_fxml.fxml"/>
    </top>
    <center>
        <TabPane>
            <Tab>
                <GridPane>
                    <children>
                        <CheckComboBox 
                            GridPane.columnIndex="0" GridPane.rowIndex="0"
                        />
                        <Separator 
                            GridPane.columnIndex="0" GridPane.rowIndex="1"
                            GridPane.columnSpan="3" />
                        
                    </children>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>                        
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                        <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                        <RowConstraints vgrow="ALWAYS" minHeight="25.0"/>
                        <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                    </rowConstraints>
                </GridPane>
            </Tab>
        </TabPane>
    </center>
