<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.hfts.sensormonitor.chart.SensorChart?>
<?import org.controlsfx.control.CheckComboBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hfts.sensormonitor.controller.MainController">
    <top>
        <MenuBar>
            <Menu text="%file">
                <MenuItem text="%quit" onAction="#manageMenuItemQuit"></MenuItem>
                <MenuItem text="%reboot" onAction="#manageMenuItemReboot"></MenuItem>  
            </Menu> 
            <Menu text="%recordings">
                <MenuItem text="%show_all" onAction="#manageMenuItemShowAll"></MenuItem>
                <MenuItem text="%delete_all" onAction="#manageMenuItemDeleteAll"></MenuItem>  
            </Menu> 
            <Menu text="%help">
                <MenuItem text="%settings" onAction="#manageMenuItemSettings"></MenuItem>  
            </Menu> 
        </MenuBar>
    </top>
    <center>
        <TabPane tabClosingPolicy="ALL_TABS" >
            <Tab text="%realtime" closable="false" >                
                <TabPane tabClosingPolicy="UNAVAILABLE" >
                    <Tab>
                        <GridPane fx:id="dataOverview">
                            <children>
                                <CheckComboBox 
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label fx:id="labelInfo"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1" />  
                                <Separator 
                                    GridPane.columnIndex="0" GridPane.rowIndex="1"
                                    GridPane.columnSpan="3" />       
                                <LineChart fx:id="chartTemperature"
                                           GridPane.columnIndex="0" GridPane.rowIndex="2"
                                           title="%temperature">
                                    <xAxis>
                                        <NumberAxis label="sec" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Â°C" />
                                    </yAxis>
                                </LineChart>
                                <LineChart fx:id="chartPressure"
                                           GridPane.columnIndex="1" GridPane.rowIndex="2"
                                           title="%pressure" >
                                    <xAxis>
                                        <NumberAxis label="sec" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="hPa" />
                                    </yAxis>
                                </LineChart>
                                <LineChart fx:id="chartRevolutions"
                                           GridPane.columnIndex="2" GridPane.rowIndex="2"
                                           title="%revolutions" >
                                    <xAxis>
                                        <NumberAxis label="sec" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="RPM" />
                                    </yAxis>
                                </LineChart>
                                <GridPane fx:id="recordingControls" 
                                          GridPane.columnIndex="0" GridPane.rowIndex="4"
                                          GridPane.columnSpan="3" >
                                    <children>
                                    <Button fx:id="buttonStartRecording"
                                            text="%start_recording" onAction="#handleButtonStartRecording" 
                                            GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <Button fx:id="buttonStopRecording"
                                            text="%stop_recording" onAction="#handleButtonStopRecording"
                                            disable="true" 
                                            GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label
                                        text="%recording_selection"
                                        GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                    <CheckBox
                                        text="%temperature" onAction="#handleCheckBoxTemperature" 
                                        GridPane.columnIndex="3" GridPane.rowIndex="0" />
                                    <CheckBox
                                        text="%pressure" onAction="#handleCheckBoxPressure" 
                                        GridPane.columnIndex="4" GridPane.rowIndex="0" />
                                    <CheckBox
                                        text="%revolutions" onAction="#handleCheckBoxRevolutions" 
                                        GridPane.columnIndex="5" GridPane.rowIndex="0" />
                                    </children>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS"/> 
                                        <ColumnConstraints hgrow="ALWAYS"/>      
                                        <ColumnConstraints hgrow="ALWAYS"/>      
                                        <ColumnConstraints hgrow="ALWAYS"/>      
                                        <ColumnConstraints hgrow="ALWAYS"/>      
                                        <ColumnConstraints hgrow="ALWAYS"/>              
                                    </columnConstraints>                                
                                </GridPane>                 
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS"/>                        
                                <ColumnConstraints hgrow="ALWAYS"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                                <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                                <RowConstraints vgrow="ALWAYS" minHeight="25.0"/>
                                <RowConstraints vgrow="NEVER" minHeight="25.0"/>
                            </rowConstraints>
                        </GridPane>
                    </Tab>
                </TabPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
